.review-block__link {
    display: none;
}
.checkout-image {
    max-width: 200px; 
    max-height: 100px;
}
#content_block{
    display: none;
}
.field__message--error{
    display: none !important;
}
.custom--error{
    display: block !important;
}
.visually--hidden { 
  position: absolute !important;
  overflow: hidden !important;
  clip: rect(0 0 0 0) !important;
  height: 1px; width: 1px !important;
  margin: -1px; padding: 0; border: 0 !important;
}
.section--shipping-address {
    position: relative;
}
.input-layer {
    background: #000; 
    position: absolute; 
    top: 0; 
    left: 0; 
    right: 0; 
    bottom: 0; 
    z-index: 1000; 
    width: 100%; 
    height: 100%; 
    opacity: 0;
}