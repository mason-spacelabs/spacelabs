<section
  class="account-page account-page-addresses"
  data-template-account-addresses
  data-template-account>
  <header class="account-page-masthead text-left">
    <div style="width: 315px; margin-left: 0px; margin-right: 50px;">
    <img class="modal-image-login" src="{{ "spacelabs-logo.png" | asset_url }}" style="margin:0px; width: 100%;">
    </div>
  </header>

  {% paginate customer.addresses by 4 %}
    <article class="account-page account-page-content">

      {% comment %}
        Customer address list
      {% endcomment %}
      {% if customer.addresses.size > 0 %}
        <div class="account-page account-addresses">
          <h2 class="account-page-subtitle">
            Company Addresses
          </h2>
          <div class="account-address-wrapper">

            {% for address in customer.addresses %}
              <div class="account-address">
                {%
                  include 'account-address-list-spacelabs',
                  address: address
                %}

                {% comment %} {% if address == customer.default_address %}
                  <p class="account-address-item account-address-item--default">
                    {{ 'customers.addresses.default_address_message' | t }}
                  </p>
                {% endif %}

                <div class="account-address-list-footer">
                  <button class="button-primary" type="button" data-edit-address="{{ address.id }}">
                    {{ 'customers.addresses.edit' | t }}
                  </button>

                  <button class="button-secondary" type="button" data-delete-address="{{ address.id }}">
                    {{ 'customers.addresses.delete' | t }}
                  </button>
                </div> {% endcomment %}
              </div>
            {% endfor %}
          </div>
          <div style="margin-top: 20px; padding: 20px 0px; display: flex;">
          <a href="/account">
          <button class="button-primary" style="margin-right: 20px; ">Back to Account</button>
          </a>
          <div class="text-center" style="width: 1000px">
            <p style="font-size: 14px; ">If you would like to update any of the above addresses please call us at 1-800-898-7788 or email customer@spacelabs.com</p>
          </div>
          </div>
          {% include 'pagination' %}
        </div>
      {% endif %}

      {% comment %}
        Customer address forms
      {% endcomment %}
      {% comment %} <div class="account-page--column-half">
        {%
          include 'account-address-form',
          address: customer.new_address,
          visible: true
        %}

        {% for address in customer.addresses %}
          {%
            include 'account-address-form',
            address: address,
            visible: false
          %}
        {% endfor %}
      </div> {% endcomment %}
    </article>
  {% endpaginate %}
</section>
